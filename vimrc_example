colorscheme desert
set background=dark

set tabstop=4 shiftwidth=4 noexpandtab

filetype on
filetype indent on
filetype plugin on
set nocopmatible mouse=a
syntax on
syntax enable

set number relativenumber
set smartcase showmode

" autocomplete curly-braces when in insert mode
inoremap {<CR> {<CR>}<ESC>O

noremap <C-d> :qa<CR>
inoremap <C-d> <C-o>:q<CR>
noremap <C-c> :qa!<CR>
inoremap <C-c> <C-o>:q!<CR>

noremap <C-j> <C-e>
noremap <C-k> <C-y>

" tab navigation
noremap <F1> gT
inoremap <F1> <C-o>gT
noremap <F2> gt
inoremap <F2> <C-o>gt

noremap <C-u> :u<CR>
inoremap <C-u> <C-o>:u<CR>

noremap <F12> :w<CR>
inoremap <F12> <C-o>:w<CR>

" Remove need to directly press Esc to leave insert mode
inoremap <C-e> <Esc>

if &diff
    colorscheme evening
    set mouse=a
endif
